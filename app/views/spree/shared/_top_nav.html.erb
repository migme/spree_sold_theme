              <%= form_for :user, :url => spree.user_session_path do |f| %>
                  <%= f.email_field :email, :class => 'input-medium', :placeholder => "Email" %>
                  <%= f.password_field :password, :class => 'input-medium', :placeholder => "Password" %>
                  <%= f.submit t(:login), :class => 'btn btn-guestlogin btn-mini' %>
                  <label class="checkbox">
                    <%= f.check_box :remember_me %><span class="guestnav-check">Remember me</span>
                    <a href="#" class="guestnav-forget">Forget Password?</a>
                  </label>
              <% end %>
          <% end %>
          </li>
