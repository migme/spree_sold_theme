              <li class="notmember">
                <a href="/signup">Not a member? Register now!</a></li>
          <% end %>
        </ul>
        </div>
      </div>

    </nav>
<% end %>
<div id="notifications" class="notifications notification-top">
  <%= flash_messages %>
</div>
