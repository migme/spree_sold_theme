<nav class="navbar" id='sold_top_navbar'>
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="/">
        <%= image_tag('soldsg-logo.png', :alt => 'Singapore Shopping Online', :class => 'logo') %>
      </a>

      <div class="nav-collapse">
        <ul class="nav menu-cover pull-left">
          <li class="divider-vertical"></li>
          <li class="<%= is_active?("spree/auctions") %> live-auction"><a href="/auctions">Auctions</a></li>
          <li class="divider-vertical"></li>
          <li class="<%= is_active?("spree/products") %> shop"><a href="/products">Shop</a></li>
          <li class="divider-vertical"></li>
          <li class="<%= is_active?("spree/flash_sales") %> sale"><a href="/flash_sales">Sales</a></li>
          <li class="divider-vertical"></li>
          <li class="<%= is_active?("spree/invitations") %> friend"><a href="/invitations">Invite</a></li>
          <li class="divider-vertical"></li>
          <li class="help"><a href="#">Help</a></li>
        </ul>

        <ul class="nav menu-cover pull-right">
          <% if current_user %>
              <li class="<%= is_active?("spree/invitations") %> cart"><%= link_to "Cart", cart_url %></li>
              <li class='amount-menu-item'>
                <a href="#"><span class='amount' id="user_coin">0</span><span class='menu-label'>Tokens</span></a></li>
              <li class='amount-menu-item'>
                <a href="#"><span class='amount' id="user_ea">0</span><span class='menu-label'>Auctions</span></a></li>
              <li class="divider-vertical"></li>
              <li id="account_db" class="dropdown">
                <a href="#account_db" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"> </i><span class="drop-username"> <%= current_user.email %></span>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><a href="/auction_informations">Auction Information</a></li>
                  <li><a href="/account_informations">Account Information</a></li>
