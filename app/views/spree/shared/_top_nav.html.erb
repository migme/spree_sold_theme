
<div class="nav-wrap">
<nav class="navbar" id='sold_top_navbar'>
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to image_tag('soldsg-logo.png', :alt => 'Singapore Shopping Online', :class => 'logo'), root_url(:subdomain => false), {:class => "brand"} %>

      <div class="nav-collapse">
        <ul class="nav menu-cover pull-left">
          <li class="divider-vertical"></li>
          <li class="<%= is_active?("spree/auctions") %> live-auction"> <%= link_to 'Auctions', root_url(subdomain: 'auctions') %> </li>
          <li class="divider-vertical"></li>
          <li class="<%= is_active?("spree/products") %> shop"><%= link_to 'Shop', root_url(subdomain: 'shop') %> </li>
          <li class="divider-vertical"></li>
          <li class="<%= is_active?("spree/flash_sales") %> sale"><%= link_to 'Sale', root_url(subdomain: 'sales') %> </li>
          <li class="divider-vertical"></li>
          <li class="<%= is_active?("spree/invitations") %> friend"><%= link_to 'Invite', invitations_url %></li>
          <li class="divider-vertical"></li>
          <li class="help"><a href="http://feedback.sold.sg/knowledgebase">Help</a></li>
        </ul>

        <ul class="nav menu-cover pull-right">
          <% if current_user %>
              <li class="<%= is_active?("spree/orders") %> cart"><%= link_to "Cart", cart_url %></li>
              <li class='amount-menu-item'>
                <a href="/purchase_tokens"><span class='amount' id="user_coin">0</span><span class='menu-label'>Tokens</span></a></li>
              <li class='amount-menu-item'>
                <a href="/auction_informations"><span class='amount' id="user_ea">0</span><span class='menu-label'>Auctions</span></a></li>
              <li class="divider-vertical"></li>
              <li id="account_db" class="dropdown">
                <a href="#account_db" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"> </i><span class="drop-username"> <%= current_user.email %></span>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><a href="/auction_informations">Auction Information</a></li>
                  <li><%=link_to(t(:account_information),account_path(:subdomain => false) )%></li>
                  <li class="divider"></li>
                  <li><%= link_to(t(:purchase_tokens), spree.purchase_tokens_path(:subdomain => false)) %></li>
                  <li class="divider"></li>
                  <li><%= link_to t(:logout), spree.destroy_user_session_url(:subdomain => false) %></li>
                </ul>
          <% else %>
              <%= form_for :user, :url => spree.user_session_url(:subdomain => false) do |f| %>
                  <%= f.email_field :email, :class => 'input-medium', :placeholder => "Email" %>
                  <%= f.password_field :password, :class => 'input-medium', :placeholder => "Password" %>
                  <%= f.submit t(:login), :class => 'btn btn-guestlogin btn-mini' %>
                  <label class="checkbox">
                    <%= f.check_box :remember_me %><span class="guestnav-check">Remember me</span>
                    <a href="#" class="guestnav-forget">Forget Password?</a>
                  </label>
              <% end %>
          <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav>
<% if content_for?(:sub_nav) %>
    <%= yield :sub_nav %>
<% else %>
    <nav class="navbar" id="sold_sub_navbar">
      <div class="subnavbar">
        <div class="container">
        <ul class="subnav">
          <li><a href="/about-us">About Us</a></li>
          <li><a href="/testimonials">Testimonials</a></li>
          <li><a href="http://thesoldgers.wordpress.com/" target="_blank">Blog</a></li>
          <li><a href="/our-commitment">Commitment</a></li>
          <li><a href="/contact-us">Contact Us</a></li>
          <% unless current_user %>
              <li class="notmember">
                <a href="/signup">Not A Member? Register Now!</a></li>
          <% end %>
        </ul>
        </div>
      </div>

    </nav>
<% end %>
</div>
<div class="nav-clear"></div>
<% if content_for?(:below_nav) %>
    <%= yield :below_nav %>
<% end %>
<div id="notifications" class="notifications notification-top">
  <%= flash_messages %>
</div>
