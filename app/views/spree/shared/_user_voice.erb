<% if Rails.env.production? %>
<script type="text/javascript">
    <% if current_user %>
    var uvOptions = {sso : '<%= CGI.escape(current_user.user_voice_token) %>'};
    <% else  %>
    var uvOptions = {};
    <% end  %>
    (function() {
        var uv = document.createElement('script');
        uv.type = 'text/javascript';
        uv.async = true;
        uv.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'widget.uservoice.com/<%= Settings.user_voice.widget_key %>.js';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(uv, s);
    })();

</script>

<% end  %>
