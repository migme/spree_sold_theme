<div class="container">
  <div class="login-main">
    <div id="forgot-password">
      <h6><%= t(:forgot_password) %></h6>

      <br class="clear">

      <%= form_for Spree::User.new, :as => :user, :url => spree.user_password_path do |f| %>
          <ul class="pull-left no-list">

            <li><%= f.email_field :email, :placeholder => "EMAIL ADDRESS" %> </li>
            <li class="pull-left"><%= f.submit t(:reset_password), :class => 'btn btn-primary' %></li>
          </ul>
          <br class="clear">


      <% end %>
    </div>
  </div>
</div>
